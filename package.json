{
  "name": "@agentsync/playwright-framework",
  "version": "1.0.0",
  "description": "AgentSync Playwright Test Framework for Salesforce Testing",
  "repository": {
    "type": "git",
    "url": "https://github.com/igautomation/ASPlaywrightJavaScriptMain.git"
  },
  "homepage": "https://github.com/igautomation/ASPlaywrightJavaScriptMain",
  "bugs": {
    "url": "https://github.com/igautomation/ASPlaywrightJavaScriptMain/issues"
  },
  "main": "src/index.js",
  "bin": {
    "playwright-framework": "./bin/cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/",
    "bin/",
    "scripts/",
    "scripts-backup/",
    "config/",
    "templates/",
    "examples/",
    "data/",
    "locales/",
    "index.js",
    "playwright.config.js",
    "playwright.config.salesforce.js",
    "global-setup.js",
    "jsconfig.json",
    "tsconfig.json",
    ".eslintrc.js",
    ".prettierrc",
    "README.md"
  ],
  "scripts": {
    "test": "playwright test",
    "test:api": "playwright test src/tests/api",
    "test:ui": "playwright test src/tests/ui",
    "test:salesforce": "playwright test src/tests/salesforce",
    "test:salesforce:headed": "playwright test src/tests/salesforce --headed",
    "test:salesforce:debug": "playwright test src/tests/salesforce --debug",
    "test:salesforce:ui": "playwright test src/tests/salesforce --ui",
    "setup:salesforce": "node src/tests/salesforce/global-setup.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "report": "npx playwright show-report",
    "build": "webpack",
    "prepublishOnly": "npm run build",
    "sf:token": "node scripts/salesforce/generate-token.js",
    "docker:build": "docker build -t playwright-framework .",
    "docker:run": "docker-compose up",
    "docker:test": "docker-compose -f docker-compose.yml up --build",
    "setup:husky": "husky install",
    "validate:framework": "node scripts/utils/validate-framework.js",
    "run:all": "node scripts/test-runners/run-all-tests.js",
    "verify:secrets": "node scripts/ci/verify-secrets.js",
    "sf:apex-tests": "node scripts/salesforce/run-apex-tests.js"
  },
  "keywords": [
    "e2e",
    "api",
    "playwright",
    "salesforce",
    "testing",
    "framework",
    "automation",
    "testrail",
    "apex",
    "soql"
  ],
  "author": "AgentSync",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.53.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^4.1.2",
    "dotenv": "^16.6.1",
    "form-data": "^4.0.3",
    "js-yaml": "^4.1.0",
    "jsforce": "^3.9.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "node-fetch": "^2.7.0",
    "playwright": "^1.53.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "babel-loader": "^9.1.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^0.18.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.0",
    "prettier": "^3.6.0",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.100.2",
    "webpack-cli": "^5.1.4"
  }
}
